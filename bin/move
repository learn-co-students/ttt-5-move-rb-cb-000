#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

# Welcome the user
puts "Welcome to Tic Tac Toe!"

# Initiate the blank board
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

# Ask for and receive user's input
puts "Where would you like to go?"
input = gets.strip
index = input_to_index(input)

# Add user's move to the board
move(board, index, "X")

# Print the new board
display_board(board)
